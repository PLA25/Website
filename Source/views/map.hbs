<div id="map" class="map"></div>
<script src="/js/heatmap.js"></script>
<script>
  var center = ol.proj.transform([4.895168, 52.370216], 'EPSG:4326', 'EPSG:3857');
  var map = new ol.Map({
    layers: [
      new ol.layer.Tile({
        source: new ol.source.XYZ({
          url: '/api/planet/{z}/{x}/{y}'
        })
      }),
      new ol.layer.Tile({
        source: new ol.source.XYZ({
          url: '/api/mapbox/{z}/{x}/{y}'
        })
      })
    ],
    target: 'map',
    view: new ol.View({
      center: center,
      zoom: 11
    })
  });
  //De heatmap api
  var heatmap = addHeatmap(map, '/api/meetpunten');
  //Dit heeft een de functies "enable" en "isEnabled"
  //Gebruik enable() of enable(true) om het aan te zetten en enable(false) om het uit te zetten
  heatmap.enable();
</script>
