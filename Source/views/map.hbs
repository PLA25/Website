<!-- Style -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/openlayers/4.6.5/ol.css" integrity="sha256-rQq4Fxpq3LlPQ8yP11i6Z2lAo82b6ACDgd35CKyNEBw=" crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" integrity="sha256-rByPlHULObEjJ6XQxW/flG2r+22R5dKiAoef+aXWfik=" crossorigin="anonymous" />

<div class="card z-depth-2 sidebar">
  <div class="card-header info-color lighten-1 white-text">
    {{i18n "map.options"}}
  </div>
  <div class="card-body">
    <label>
      <b>
        {{i18n "map.go-to"}}
      </b>
    </label>
    <div class="md-form" style="margin-top: 0px;">
      <i class="fa fa-globe prefix"></i>
      <input id="address" type="text" placeholder="Search location" class="form-control">
      <div class="alert alert-danger" id="goToError"></div>
    </div>
    <hr>

    <label>
      <b>
        {{i18n "map.features"}}
      </b>
    </label>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="mapboxLayer">
      <label class="custom-control-label" for="mapboxLayer">{{i18n "map.navigation"}}</label>
    </div>

    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="sensorhubLayer">
      <label class="custom-control-label" for="sensorhubLayer">{{i18n "map.sensorhubs"}}</label>
    </div>
    <hr>

    <label>
      <b>
        {{i18n "map.layers"}}
      </b>
    </label>
    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="tempEnabled">
      <label class="custom-control-label" for="tempEnabled">{{i18n "map.temperature"}}</label>
    </div>

    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="gasEnabled">
      <label class="custom-control-label" for="gasEnabled">{{i18n "map.gas"}}</label>
    </div>

    <div class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input" id="lightEnabled">
      <label class="custom-control-label" for="lightEnabled">{{i18n "map.light"}}</label>
    </div>
    <hr>

    <label>
      <b>
        {{i18n "map.timeline"}}
      </b>
    </label>
    <div class="btn-group" style="width: 100%;">
      <div id="custom-handle" style="width: 50%;">
        {{i18n "map.latest-data"}}
      </div>
      <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="time-button" style="width: 50%;">
        2 {{i18n "map.hour"}}
      </button>

      <div class="dropdown-menu" id="time-menu">
        <a class="dropdown-item" href="#" id="time-1">1 {{i18n "map.hour"}}</a>
        <a class="dropdown-item" href="#" id="time-2" style="display: none;">2 {{i18n "map.hour"}}</a>
        <a class="dropdown-item" href="#" id="time-6">6 {{i18n "map.hour"}}</a>
        <a class="dropdown-item" href="#" id="time-12">12 {{i18n "map.hour"}}</a>
        <a class="dropdown-item" href="#" id="time-24">24 {{i18n "map.hour"}}</a>
      </div>
    </div>

    <div id="slider" style="margin-top: 15px;">
      <div class="ui-slider-handle"></div>
    </div>
    <hr>
  </div>
</div>

<div class="card text-center z-depth-2 map">
  <div class="card-header info-color lighten-1 white-text">
    {{i18n "map.map"}}
  </div>
  <div class="card-body">
    <div id="map"></div>
    <div class="scale">
      -50°C
      <img src="/spectrum.png" style="border-radius: 5500px;" height="40px" width="250px"> 50°C
    </div>
  </div>
</div>

<!-- Scripts -->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAxgkazSz27Oj0EwF4ihxIefC6_eaF79wk&libraries=places" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/openlayers/4.6.5/ol.js" integrity="sha256-77IKwU93jwIX7zmgEBfYGHcmeO0Fx2MoWB/ooh9QkBA=" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="/js/map.js" crossorigin="anonymous"></script>