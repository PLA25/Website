<div id="map" class="map"></div>
<script>
  var center = ol.proj.transform([4.895168, 52.370216], 'EPSG:4326', 'EPSG:3857');
  var map = new ol.Map({
    layers: [
      new ol.layer.Tile({
        source: new ol.source.OSM()
      }),
      new ol.layer.Tile({
        source: new ol.source.XYZ({
          url: '/api/{z}/{x}/{y}'
        })
      }),
      new ol.layer.Tile({
        source: new ol.source.XYZ({
          url: 'https://{a-d}.tiles.mapbox.com/v3/planet.jh0b3oee/{z}/{x}/{y}.png'
        })
      }),
      new ol.layer.Vector({
        source: new ol.source.Vector({
          url: '/api/meetpunten',
          format: new ol.format.KML()
        })
      })
    ],
    target: 'map',
    view: new ol.View({
      center: center,
      zoom: 11
    })
  });
</script>
