<!-- Profiel Pagina -->

<link rel="stylesheet" href="/css/profile.css" rel="stylesheet" crossorigin="anonymous">

<div id="pimage">

	<div>
		{{#if user.profileImage}}
			<img id="Image" src="{{user.profileImage}}" alt="Profile Image" />
		{{else}}
			<img id="Image" src="/noimage.png" alt="Profile Image" />
		{{/if}}
	</div>

</div>

<div id="pinfo">

	<table class="table">
		<tbody>
			<tr>
				<td class="text-right" id="properties">
					Name
					<br />
					Email
					<br />
					Admin
				</td>
				<td class="text-left">
					{{user.name}}
					<br />
					{{user.email}}
					<br />
					{{#if user.isAdmin}}
						yes
					{{else}}
						no
					{{/if}}
				</td>
			</tr>
		</tbody>
	</table>
	<button class="btn btn-warning">Edit Profile</button>

</div>