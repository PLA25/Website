<style>
  th {
    padding-right: 5px;
  }
  td {
    padding-left: 5px;
  }
  main {
    overflow: hidden;
  }
  #wrapper {
    display: inline-block;
  }
</style>
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header info-color white-text">
        {{i18n "admin.user"}} Info
      </div>
      <form method="POST" action="/admin/saveUser/{{editUser.email}}" class="card-body text-center">
        <div class="text-left" id="wrapper">
          <table>
            <tbody>
              <tr>
                <th><label for="email-input">Email</label></th>
                <td>
                  <input name="newEmail" id="email-input" type="text" placeholder="{{i18n "admin.email"}}" value="{{editUser.email}}" />
                </td>
              </tr>
              <tr>
                <th><label for="role-select">{{i18n "admin.admin"}}</label></th>
                <td>
                  <select name="role" id="role-select" name="role" class="mdb-select">
                    <option value="true" {{#if editUser.isAdmin}}selected=""{{/if}}>{{i18n "account.yes"}}</option>
                    <option value="false" {{#unless editUser.isAdmin}}selected=""{{/unless}}>{{i18n "account.no"}}</option>
                  </select>
                </td>
              </tr>
              <tr>
                <th><label for="reset-password">{{i18n "admin.reset_password"}}</label></th>
                <td><input name="resetPass" id="reset-password" type="checkbox" /></td>
              </tr>
            </tbody>
          </table>
          <button class="btn btn-primary" onclick="location.href = '/admin';">{{i18n "account.back"}}</button>
          <input type="submit" class="btn btn-primary" value="{{i18n "account.save_changes"}}" />
          <input name="oldEmail" type="text" style="display: none;" value="{{editUser.email}}" />
        </div>
      </form>
    </div>
  </div>
</div>
