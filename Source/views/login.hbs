<!DOCTYPE html>
<html>

<head>
	<!-- Meta -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Title -->
	{{#if title}}
		<title>PDS - {{title}}</title>
	{{else}}
		<title>PolutionDetectionSystem</title>
	{{/if}}

	<!-- Style -->

	<!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/css/mdb.min.css" rel="stylesheet" integrity="sha384-Xs3HsmEnkn3GuuBg8nr2ntOPDKbIntZF4fC9XXL1hqsgaVVnKd6vHnf9YVT/R6Kj" crossorigin="anonymous">


	<!-- Script -->

	<!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha384-xBuQ/xzmlsLoJpyjoggmTEz8OWUFM0/RC5BsqQBDX2v5cMvDHcMakNTNrHIW2I5f" crossorigin="anonymous"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.0/js/mdb.min.js" integrity="sha384-Y9m2kwm4OOjZ4AyDvK/6IEUqz0XKcLlQJFnkMnZKOziXmiOAcNHkE9BwTOowtgyK" crossorigin="anonymous"></script>

	<style>

		html {
			background-color: #ffffff;
		}
		form {
			position: absolute;
			top: 50%;
			left: 50%;
			width: 30%;
			transform: translateY(-50%) translateX(-50%);
		}
		@media (max-width: 800px) {
			form {
				width: 90% !important;
			}
		}
		@media (max-width: 1000px) {
			form {
				width: 60%;
			}
		}

	</style>
</head>

<body>

	<form class="mt-3" method="POST">
		<p class="h4 text-center mb-4">Sign in</p>

		<!-- Material input email -->
		<div class="md-form">
			<i class="fa fa-envelope prefix grey-text"></i>
			<input type="text" name="email" id="email" placeholder="Email" class="form-control">
			<!--<label for="email" class="">Your email</label>-->
		</div>

		<!-- Material input password -->
		<div class="md-form">
			<i class="fa fa-lock prefix grey-text"></i>
			<input type="password" name="password" id="password" placeholder="Password" class="form-control">
			<!--<label for="password" class="">Your password</label>-->
		</div>

		<div class="text-center mt-4">
			<button class="btn btn-primary" type="submit">Login</button>
		</div>
	</form>

</body>

</html>
