<div class="row">

  <div class="col-12 col-xl-6">
    <h1>Users</h1>
    <table class="table table-responsive-md table-striped">
      <thead class="rgba-blue-dark darken-3">
        <tr class="text-white">
          <th>Email</th>
          <th>Admin</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each Users}}
          <tr>
            <td>
              {{this.email}}
            </td>
            <td>
              {{this.isAdmin}}
            </td>
            <td>
              <button type="button" class="btn btn-primary btn-rounded btn-sm my-0">
                <span class="d-block d-sm-none">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </span>

                <span class="d-none d-sm-block">
                  <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                </span>
              </button>
            </td>
            <td>
              <button type="button" class="btn btn-danger btn-rounded btn-sm my-0">
                <span class="d-block d-sm-none">
                  <i class="fa fa-trash" aria-hidden="true"></i>
                </span>

                <span class="d-none d-sm-block">
                  <i class="fa fa-trash" aria-hidden="true"></i> Delete
                </span>
              </button>
            </td>
          </tr>
        {{/each}}

      </tbody>

    </table>
  </div>

  <div class="col-12 col-xl-6">
    <h1>SensorHubs</h1>
    <table class="table table-responsive-md table-striped">
      <thead class="rgba-blue-dark darken-3">
        <tr class="text-white">
          <th>SerialID</th>
          <th>Longitude</th>
          <th>Latitude</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each sensorHubs}}
          <tr>
            <td>
              {{this.SerialID}}
            </td>
            <td>
              {{this.Longitude}}
            </td>
            <td>
              {{this.Latitude}}
            </td>
            <td>
              <button type="button" class="btn btn-primary btn-rounded btn-sm my-0">
                <span class="d-block d-sm-none">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </span>

                <span class="d-none d-sm-block">
                  <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                </span>
              </button>
            </td>
            <td>
              <button type="button" class="btn btn-danger btn-rounded btn-sm my-0">
                <span class="d-block d-sm-none">
                  <i class="fa fa-trash" aria-hidden="true"></i>
                </span>

                <span class="d-none d-sm-block">
                  <i class="fa fa-trash" aria-hidden="true"></i> Delete
                </span>
              </button>
            </td>
          </tr>
        {{/each}}

      </tbody>

    </table>
  </div>

</div>
