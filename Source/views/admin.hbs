<!-- Style -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.16/css/jquery.dataTables.min.css" integrity="sha256-YY1izqyhIj4W3iyJOaGWOpXDSwrHWFL4Nfk+W0LyCHE=" crossorigin="anonymous" />

<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-xl-6 first-col">
      <h1>{{i18n "admin.change-logo"}}</h1>

      <form ref="uploadLogoForm" id="uploadLogoForm" action="/admin/upload-logo" method="post" encType="multipart/form-data">
        <input type="file" name="logo" />
        <input type="submit" class="btn btn-primary btn-rounded btn-sm my-1" />
      </form>
    </div>

    <div class="col-12 col-xl-6 first-col"></div>

    <div class="col-12 col-xl-6">
      <h1>{{i18n "admin.users"}}</h1>
      <table class="table table-responsive-md table-striped" id="table-users">
        <thead class="rgba-blue-dark darken-3">
          <tr class="text-white">
            <th>{{i18n "admin.email"}}</th>
            <th>{{i18n "admin.admin"}}</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
            <tr>
              <td>
                {{this.email}}
              </td>
              <td>
                {{this.isAdmin}}
              </td>
              <td>
                <button type="button" class="btn btn-primary btn-rounded btn-sm my-0">
                  <span class="d-block d-sm-none">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  </span>

                  <span class="d-none d-sm-block">
                    <i class="fa fa-pencil" aria-hidden="true"></i> {{i18n "admin.edit"}}
                  </span>
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-danger btn-rounded btn-sm my-0">
                  <span class="d-block d-sm-none">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </span>

                  <span class="d-none d-sm-block">
                    <i class="fa fa-trash" aria-hidden="true"></i> {{i18n "admin.delete"}}
                  </span>
                </button>
              </td>
            </tr>
          {{/each}}

        </tbody>

      </table>
    </div>

    <div class="col-12 col-xl-6">
      <h1>SensorHubs</h1>
      <table class="table table-responsive-md table-striped" id="table-sensorhubs">
        <thead class="rgba-blue-dark darken-3">
          <tr class="text-white">
            <th>{{i18n "admin.serial-id"}}</th>
            <th>{{i18n "admin.longitude"}}</th>
            <th>{{i18n "admin.latitude"}}</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each sensorHubs}}
            <tr>
              <td>
                {{this.SerialID}}
              </td>
              <td>
                {{this.Longitude}}
              </td>
              <td>
                {{this.Latitude}}
              </td>
              <td>
                <a href="/sensorhub/{{this.SerialID}}">
                  <button type="button" class="btn btn-primary btn-rounded btn-sm my-0">

                    <span class="d-block d-sm-none">
                      <i class="fa fa-book" aria-hidden="true"></i>
                    </span>

                    <span class="d-none d-sm-block">
                      <i class="fa fa-book" aria-hidden="true"></i> Details
                    </span>
                  </button>
                </a>
              </td>
              <td>
                <button type="button" class="btn btn-primary btn-rounded btn-sm my-0">
                  <span class="d-block d-sm-none">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                  </span>

                  <span class="d-none d-sm-block">
                    <i class="fa fa-pencil" aria-hidden="true"></i> {{i18n "admin.edit"}}
                  </span>
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-danger btn-rounded btn-sm my-0">
                  <span class="d-block d-sm-none">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </span>

                  <span class="d-none d-sm-block">
                    <i class="fa fa-trash" aria-hidden="true"></i> {{i18n "admin.delete"}}
                  </span>
                </button>
              </td>
            </tr>
          {{/each}}

        </tbody>

      </table>
    </div>

    <div class="col-12 col-xl-6">
    <h1>{{i18n "admin.limitvalue"}}</h1>
    <table class="table table-responsive-md table-striped" id="table-value">
      <thead class="rgba-blue-dark darken-3">
        <tr class="text-white">
          <th>{{i18n "admin.limitvaluename"}}</th>
          <th>{{i18n "admin.limitvaluevalue"}}</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each configs}}
          <tr>
            <td>
              {{this.valueID}}
            </td>
            <td>
              {{this.value}}
            </td>
            <td>
              <a href="/config/{{this.valueID}}">
                  <button type="button" class="btn btn-primary btn-rounded btn-sm my-0">

                    <span class="d-block d-sm-none">
                      <i class="fa fa-pencil" aria-hidden="true"></i>
                    </span>

                    <span class="d-none d-sm-block">
                      <i class="fa fa-pencil" aria-hidden="true"></i> {{i18n "admin.edit"}}
                    </span>
                  </button>
                </a>
                
            </td>
          </tr>
        {{/each}}

      </tbody>

    </table>
  </div>
      
      
  </div>
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.16/js/jquery.dataTables.min.js" integrity="sha256-qcV1wr+bn4NoBtxYqghmy1WIBvxeoe8vQlCowLG+cng=" crossorigin="anonymous"></script>
<script src="/js/admin.js" crossorigin="anonymous"></script>